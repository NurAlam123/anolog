generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String
  updatedAt DateTime @updatedAt @map("created_at")
  createdAt DateTime @default(now()) @map("updated_at")

  @@map("post")
}
